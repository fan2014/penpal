<% provide(:title, 'Up | Inbox')%>
<div class="row">	
  <aside class="span2 noUnderline"> 
	  <section>
		  <table class="table table-hover">
			  <thead><tr><th>Inbox</th></tr></thead>
				<tbody>
					<% @mails.each do |mail|%>
					<% if mail.user.id==2%>
					<% gender = "boy"%>
					<% else %>
					<% gender = "girl"%>
					<% end %>
				  <tr><td><%= link_to mail.subject, 
						mail_path(mail),
						id:mail.id,
						class:gender %></td></tr>
					<% end %>
			  </tbody>
		  </table>
	  </section>
  </aside>

</div>