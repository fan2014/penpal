<% provide(:title, 'Up | Read again')%>
<div class="row">		
	<div class="span10">
		<div class="panel panel-warning">
		  <div class="panel-heading">
			<h3 class="panel-title"><%= @mail.subject %></h3>
		  </div>
		  <div class="panel-body">
			<pre>
			<%= simple_format(@mail.content) %>
		  </pre>
		  </div>
		  <div class="panel-footer">
		    Sent <%= time_ago_in_words(@mail.created_at) %> ago by
		         <%= @mail.user.name %>
		  </div>
		</div>
	</div>

</div>




